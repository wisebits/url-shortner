# Copy this file to [app]/config/config_env.rb
# Replace [...] with credentials/keys/etc.
# New symmetric keys can be generated by `rake key:symmetric:generate` task

config_env :development, :test do
  set 'DB_KEY', "[database encryption key in base64 url safe encoding]"
  set 'JWK256', '[JWT encryption key in base64 url safe encoding]'
  set 'GH_CLIENT_ID', '[Use github developer+application client id]'
  set 'GH_CLIENT_SECRET', '[Use github developer+application client secret]'
  set 'APP_PUBLIC_KEY', '[Use client application public key]'
end

config_env :test do
  # following is to recreate signed app requests
  set 'APP_SECRET_KEY', '[Use dev/test secret key from client application]'
end

config_env :production do
  set 'DB_KEY', "[database encryption key in base64 url safe encoding]"
  set 'JWK256', '[JWT encryption key in base64 url safe encoding]'
  set 'GH_CLIENT_ID', '[Use github developer+application client id]'
  set 'GH_CLIENT_SECRET', '[Use github developer+application client secret]'
  set 'APP_PUBLIC_KEY', '[Use client application public key]'
end